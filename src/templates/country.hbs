<div class="country">
    <div class="country__description">
        <h2 class="country__name">{{name.official}}</h2>
        <h4 class="country__capital">Capital: {{capital}}</h4>
        <p class="country__population">Population: {{population}}</p>
        <p class="country__languages">Languages:</p>
        <ul class="country__languages-list">{{#each languages}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="country__flag">
        <img src="{{flags.png}}" alt="{{name.common}} flag">
    </div>
</div>
